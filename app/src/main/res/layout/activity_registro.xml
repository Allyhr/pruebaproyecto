<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#1C1C1C">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="Crear cuenta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF6F00"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtNombre"
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/edittext_garage"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/edtUsuario"
            android:hint="Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/edittext_garage"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/edtCorreo"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/edittext_garage"
            android:layout_marginBottom="30dp"/>

        <!-- Contraseña con botón de ver/ocultar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <EditText
                android:id="@+id/edtContrasena"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:background="@drawable/edittext_garage" />

            <ImageView
                android:id="@+id/btnToggleContrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye_off"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="12dp" />
        </RelativeLayout>

        <!-- Confirmar contraseña con botón de ver/ocultar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <EditText
                android:id="@+id/edtConfirmarContrasena"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:background="@drawable/edittext_garage" />

            <ImageView
                android:id="@+id/btnToggleConfirmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye_off"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="12dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnRegistrarse"
            android:text="Registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF6F00"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
